<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/currency_back"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context="com.example.johnny.mycoin.SelectionMode">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_header_shape"
        android:elevation="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="223dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/header" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/centerLayout"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/mode_selection_border"
        android:elevation="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="35dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mode Selection"
            android:textColor="#FFF"
            android:textSize="22dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_mode_1"
            style="@style/GameButtonTheme"
            android:text="Teach Mode" />

        <Button
            android:id="@+id/btn_mode_2"
            style="@style/GameButtonTheme"
            android:text="Guess Mode" />

        <Button
            android:id="@+id/btn_mode_3"
            style="@style/GameButtonTheme"
            android:text="Time Mode" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_instruction"
            style="@android:style/Widget.Material.Light.Button.Inset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="How to Play"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/btn_setting"
            style="@android:style/Widget.Material.Light.Button.Inset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/btn_exit"
            style="@android:style/Widget.Material.Light.Button.Inset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Exit"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    </LinearLayout>

</LinearLayout>

